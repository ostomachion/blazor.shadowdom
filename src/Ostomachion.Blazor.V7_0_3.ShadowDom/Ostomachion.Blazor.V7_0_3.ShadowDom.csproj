<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PackageId>$(AssemblyName)</PackageId>
    <Title>Blazor Shadow DOM</Title>
    <Version>1.0.0-preview2</Version>
    <Authors>ostomachion</Authors>
    <Company />
    <Copyright>Copyright © Josh Hufford 2023</Copyright>
    <Description>A modified version of Microsoft's Blazor JavaScript files to add support for shadow DOMs.</Description>
    <PackageProjectUrl>https://github.com/ostomachion/blazor.shadowdom</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ostomachion/blazor.shadowdom</RepositoryUrl>
    <PackageTags>Blazor; ShadowDOM; ShadowRoot; WebComponents</PackageTags>
    <PackageReleaseNotes>Initial pre-release of Ostomachion.Blazor.ShadowDom scripts. Only blazor.webassembly.js has been tested.</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="icon.png" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>
	
</Project>
